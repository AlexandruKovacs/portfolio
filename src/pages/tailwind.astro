            <div class="ml-3 overflow-hidden">
                <p class="text-sm font-medium text-slate-900">Courtney Henry</p>
                <p class="text-sm text-slate-500 truncate">courtney.henry@example.com</p>
            </div>
        </li>
        <li class="flex py-4 firt:pt-0 last:pb-0">
            <img class="h-10 w-10 rounded-full" alt="Face" src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80">
            <div class="ml-3 overflow-hidden">
                <p class="text-sm font-medium text-slate-900">Ted Fox</p>
                <p class="text-sm text-slate-500 truncate">ted.fox@example.com</p>
            </div>
        </li>
    </ul>

    <!-- Table -->
    <h2 class="text-center py-4 text-lg">Table</h2>
    <table class="mx-auto table">
        <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
                <th class="font-semibold">Name</th>
                <th class="font-semibold">Job Title</th>
